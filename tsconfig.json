{
    "compilerOptions": {
        "outDir": "dist/assets/javascripts",
        "target": "ES2022",
        "module": "ES2022",
        "strict": true,
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "files": [
        "src/app.ts"
    ],
    "include": [
        "src/core/alias.ts",
        "src/core/game.ts",
        "src/core/player.ts",
        "src/core/constants.ts",
        "src/lang/**/*",
        "src/data/**/*"
    ],
    "exclude": [
        "src/core/types/**/*",
        "src/core/enums/**/*",
        "src/core/interfaces/**/*"
    ]
}